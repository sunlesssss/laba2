import re

def check_password_strength(password):
    """
    Проверяет надежность пароля по критериям:
    - Минимум 8 символов
    - Есть заглавные и строчные буквы (включая русские)
    - Есть цифры
    - Есть специальные символы
    """
    pattern = r'^(?=.*[a-zа-я])(?=.*[A-ZА-Я])(?=.*\d)(?=.*[!@#$%^&*()_+\-=\[\]{};\':"\\|,.<>\/?]).{8,}$'
    
    if re.match(pattern, password):
        return "Надежный пароль"
    else:
        return "Слабый пароль"

def find_passwords_in_text(text):
    """Ищет потенциальные пароли в тексте"""
    # Ищем последовательности символов, которые могут быть паролями (включая русские буквы)
    potential_passwords = re.findall(r'[A-Za-zА-Яа-я\d!@#$%^&*()_+\-=\[\]{};\':"\\|,.<>\/?]{8,}', text)
    strong_passwords = []
    
    for password in potential_passwords:
        if check_password_strength(password) == "Надежный пароль":
            strong_passwords.append(password)
    
    return strong_passwords

def main():
    print("Проверка надежности паролей")
    
    while True:
        print("\n1 - Проверить пароль")
        print("2 - Найти пароли в тексте")
        print("3 - Выйти")
        
        choice = input("Выберите действие: ")
        
        if choice == "1":
            password = input("Введите пароль: ")
            result = check_password_strength(password)
            print("Результат:", result)
            
        elif choice == "2":
            text = input("Введите текст для поиска: ")
            passwords = find_passwords_in_text(text)
            if passwords:
                print("Найденные надежные пароли:")
                for pwd in passwords:
                    print("-", pwd)
            else:
                print("Надежные пароли не найдены")
                
        elif choice == "3":
            print("Выход...")
            break
        else:
            print("Неверный выбор")

if __name__ == "__main__":
    main()
